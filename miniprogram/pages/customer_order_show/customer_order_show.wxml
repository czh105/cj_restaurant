<!--pages/customer_order_show/customer_order_show.wxml-->
<view hidden="{{!isExit}}" style="background-color:#d7d8dd">
  <view class="order-table">
    <scroll-view scroll-y="true" class="scroll-view" scroll-width-animation='true'>
      <view  wx:for="{{orderList}}" >
        <view class="order-panel">
          <view>
            <text class="order-id">id:{{item.orderid}}</text>
            <text class="order-state">{{item.orderState}}</text>
          </view>
          <view>
            <text class="order-time">{{item.orderTime}}</text>
            <text class="order-total">￥:{{item.total}}</text>
          </view>
          <view class="dish-item">
            <view class="dish-title" data-index='{{index}}' catchtap="showAndColse">
              <view class='title-name'>
                <text>订单信息</text>
                <image src="../../images/{{showIndex == index ? 'up':'down'}}.png"></image>
              </view>
              <view class='detail' wx:if="{{showIndex == index}}">
                <view class="panel-according-form">
                  <view class="table">
                    <view class='tr'>
                      <view class='th'>编号</view>
                      <view class='th'>菜品名</view>
                      <view class='th'>价格</view>
                      <view class='th'>数量</view>
                    </view>
                    <view class='tr' wx:for="{{item.dish}}" wx:for-item="dish" wx:for-index="dishNo">
                      <view class='td'>{{dishNo}}</view>
                      <view class='td'>{{dish.desc}}</view>
                      <view class="td">{{dish.price}}</view>
                      <view class='td'>{{dish.count}}</view>
                    </view>
                  </view>
                </view>
              </view>
            </view>
          </view>
          <view>
            <view>地址：{{item.address}}</view>
            <view>电话：{{item.phone}}</view>
            <button id='up{{item.orderid}}' size="mini" bindtap="updateUserMessage">修改订单</button>
          </view>
        </view>
      </view>
    </scroll-view>
  </view>
  <view class="merchat-row" bindtap="callPhone">联系商家</view>
</view>
<view class="dialog" hidden="{{isModify}}">
  <text>地址:</text><input bindinput="addressInput" value="{{address}}" placeholder="不能为空" maxlength="50"></input>
  <text>手机号</text><input type="text" bindinput="phoneInput" value="{{phone}}" placeholder="电话号码" maxlength="11"></input>
  <view><button id="nodify{{orderid}}" bindtap="updateMessage">修改</button>
  <button bindtap="closeDialog">取消</button></view>
</view>
<view hidden="{{isExit}}">
  <view>亲，你还没有订单，快去看看菜单吧</view>
</view>