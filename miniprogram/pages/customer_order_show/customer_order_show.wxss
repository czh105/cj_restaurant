/* pages/customer_order_show/customer_order_show.wxss */
page{
  font-size: 14px;
  color: #333;
}
.order-table{
  position: fixed;
  overflow-y: hidden;
  width: 100%;
  height: 92.5%;
}
.order-table .scroll-view{
  width:100%;
  height:100%;
}
.merchat-row{
  bottom: 0px;
  height: 7.5%;
  width: 100%;
  font-size: large;
  position: fixed;
  background-color: blue;
  color: white;
  text-align: center;
}
.merchat-row:nth-child(even){
  background-color: gray;
}
.merchat-row:nth-child(odd){
  background-color: grey;
}
.dish-item{
  width:100%;
  display: flex;
  flex-direction: row-reverse;
}
.dish-item .dish-title{
  font-size: 10px;
  line-height: 20px;
  background-color: #e2e2e2;
  width: 100%; 
}
.dish-item  .dish-title .title-name{
  width:100%;
  height:20px;
}
.dish-item  .dish-title .title-name > text{
  width:80%;
  height:20px;
}
.dish-item  .dish-title .title-name > image{
  width: 15px;
  height: 15px;
}
.dish-item .detail{
  margin-top: 0;
  text-indent:2em;
  width: 100%;
  display: inline-table;
}
.panel-according-form{
  margin-top: auto;
  border:1px inset #333;
  width:100%;
  font-size:xx-small;
}

.panel-hide {
  display: none;
}
.table{
  width:100%;
  border-bottom: 0;
  border-right: 0;
  border-top:0;
}
.table > .tr{
  width: 100%;
  display: flex;
  justify-content: space-between;
}
.table > .tr > .th{
  text-align: center;
  font-weight: 400;
  width: 25%;
}
.table > .tr:nth-child(even) > .td{
  width:25%;
  text-align: center;
  background-color: lightgray;
}
.table > .tr:nth-child(odd) > .td{
  width:25%;
  text-align: center;
  background-color:rgb(248, 245, 245);
}
.order-panel{
  margin-bottom: 5px;
  border-bottom: 3px solid #75b6eb;
  margin-bottom: 10px;
}
.order-panel view .order-id{
  font-size: xx-small;
  width:70%;
  position: relative;
  float: left;
}
.order-panel view .order-state{
  width:30%;
  position: relative;
  font-size: xx-small;
  float: right;
  text-align: center;
  color: red;
}
.order-panel view .order-time{
  width:60%;
  position: relative;
  font-size: xx-small;
  float: left;
}
.order-panel view .order-total{
  width: 40%;
  position:relative;
  font-size: smaller;
  float: right;
  text-align: center;
  color: red;
}
.dialog{
  position: fixed;
  width:80%;
  left:10%;
  top:30%;
  background-color: lightslategray;
  z-index: 5;

}


