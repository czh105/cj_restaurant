/* tabbar/popup.wxss */
.popup-box{
  position: fixed;
  width:200px;
  height: 150px;
  left:30%;
  top:20%;
  display: flex;
  flex-direction: column;
  background-color: lavender;
}
.popup-box .title-div{
  width:100%;
  height: 100%;
  text-align: center;
}
.popup-box .address-div{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: row;
}
.popup-box .address-div .add-text{
  width: 30%;
  margin-left:5px;
  float: right;
}
.popup-box .address-div .add-input{
  width:60%;
  text-align: left;
  float: left;
  margin-right: 5px;
  background-color: white;
}
.popup-box .phone-div{
  width:100%;
  height: 100%;
  text-align: center;
}
.popup-box .tip-div{
  width: 100%;
  height: 100%;
  text-align: center;
}
.popup-box .btn-div{
  width:100%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: row;
}
.popup-box .btn-div .btn-ok{
  width: 50%;
  text-align: center;
  color: red;
}
.popup-box .btn-div .btn-no{
  width:50%;
  text-align: center;
}